# Environment variables
NODE_ENV=development
PORT=5000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=elevatex_db
DB_USER=postgres
DB_PASSWORD=password

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Payment Gateways
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret_key
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_flutterwave_public_key

# SMS Gateway (for Nigerian OTP)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=Elevatex

# System Configuration
ACTIVATION_FEE=3000
REFERRAL_LEVELS=5
MAX_CHAIN_SIZE=31

# Levels and Payouts (in Naira)
LEVEL_1_PAYOUT=200
LEVEL_2_PAYOUT=150
LEVEL_3_PAYOUT=100
LEVEL_4_PAYOUT=50
LEVEL_5_PAYOUT=50

# Expo Push Notifications
EXPO_ACCESS_TOKEN=your_expo_access_token

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# File Upload
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880